term.setCursorBlink (false) -- Ausschalten des Blinkens
shell.run ("clear") --Löschen des voherigen bildschirms
term.setBackgroundColor (2048) -- Obere Leiste bis auf X erzeugen
term.setTextColor (1)
local n = 0
for n=1,50 do
  term.write (" ")
end
term.setBackgroundColor (16384) --X erzeugen
term.write ("X")
term.setBackgroundColor (8) --Restliche Hellblaue Fläche erzuegen
local a = 0
term.setCursorPos (1,2)
for a=1,17 do
  for n=1,50 do
    term.write (" ")
  end
  print (" ")
end
write("                                                   ")
term.setCursorPos (1,2) --Setzen des Cursors auf die 2. Zeile, 1. Zeichen
